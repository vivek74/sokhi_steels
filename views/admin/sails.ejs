<% include ../partials/header %>
	<div class="container-fluid top-margin">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<div class="card mt-3">
				  <div class="card-body">
				  	<h5 class="card-title">DETAILS OF SALES</h5>
				  	<h5 class="float-right" style="font-size: 15px;">Total Sales: <span style="color: red;">₹ <%=totalSail%> /-</span> </h5>
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Sell Date</th>
						      <th scope="col">QTY</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Total Cost</th>
						      <th scope="col">Customer Name</th>
						      <th scope="col">Customer Contact No</th>
						      <th scope="col">Customer Address</th>
						      <th scope="col">Submited by</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% exportitem.reverse().forEach(function(exportitems){ %>
						    <tr>
						      <th style="text-transform: uppercase;"><%=exportitems.ItemNo%></th>
						      <td style="text-transform: uppercase;"><%=exportitems.ItemName%></td>
						      <td><%= moment(exportitems.SellDate).format("DD-MMM-YYYY") %></td>
						      <td><%=exportitems.itemQty%></td>
						      <td>₹ <%=exportitems.costPerItem%>/-</td>
						      <td>₹ <%=exportitems.totalCost%>/-</td>
						      <td><%=exportitems.CustomerName%></td>
						      <td><%=exportitems.CustomerContact%></td>
						      <td><%=exportitems.CustomerAddress%></td>
						      <td><%=exportitems.user%></td>
						    </tr>
						    <%});%>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>
		</div>
	</div>
<% include ../partials/header %>	