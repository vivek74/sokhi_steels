<% include ../partials/header %>
	<div class="container top-margin">
		<div class="raw">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<div class="card">
				  <div class="card-body">
				  	<div class="row">
				  		<div style="ali" class="col-lg-8">
				  			<h5 style="text-align: right;"><i style="color: red;" class="far fa-file-alt"></i> &nbsp LIST OF RAW MATERIAL</h5>
				  		</div>
				  		<div class="col-lg-4">
				  			<button data-toggle="modal" data-target="#createcol" type="button" class="btn btn-primary float-right">
							  Column <span class="badge badge-light"><i style="color: red;" class="fas fa-plus"></i></span>
							  <span class="sr-only">unread messages</span>
							</button>
				  		</div>
				  		
				  	</div>
				    
				  </div>
				</div>
				<div class="card mt-3">
				  <div class="card-body">
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <% foundcol.cols.forEach(function(col){ %>
						      <th style="text-transform: uppercase;"><%=col.text%></th>
						      <%});%>
						    </tr>
						  </thead>
						  <tbody><!--
						  	<% foundcol.cols.forEach(function(cols){ %>
						    <tr>
						      <th style="text-transform: uppercase;"><%=cols.shopName%></th>
						    </tr>
						    <%});%>-->
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>

			<!--add of rawaterial-->

			<div class="col-lg-12 col-md-12 col-sm-12 mt-5">
				<div class="card mt-3">
				  <div class="card-body">
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <% foundcol.cols.forEach(function(col){ %>
						      <th style="text-transform: uppercase;"><%=col.text%></th>
						      <%});%>
						      <th>SUBMIT</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<form action="/admin/admin-pannel/raw-Material-List" method="POST">
							    <tr>
							      <% foundcol.cols.forEach(function(col){ %>
							      <th >
							      	<input style="text-transform: uppercase;" class="form-control form-control-sm" type="text" name="itemNo" placeholder=<%=col.text%>>
							      </th>
							      <%});%>
							      <th >
							      	<button type="button" class="btn btn-danger btn-sm">OK</button>
							      </th>
							    </tr>

							</form>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>
		</div>

		<!-- Modal -->
		<div class="modal fade" id="createcol" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
		  <div class="modal-dialog modal-dialog-centered" role="document">
		    <div class="modal-content">
		      <div class="modal-header">
		        <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <form action="/new/col/<%=foundcol._id%>" method="post">
		      <div class="modal-body">
		        	<input class="form-control form-control-sm" name="Newcol" type="text" placeholder="New Col" required>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
		        <button type="submit" class="btn btn-primary btn-sm">Create</button>
		      </div>
		      </form>
		    </div>
		  </div>
		</div>
	</div>
<% include ../partials/footer %>