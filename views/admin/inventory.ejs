<% include ../partials/header %>
	<div class="container-fluid top-margin">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<h5 class="mt-3" style="text-align: center;">RAW MATERIAL</h5>
				<div class="card mt-3">
				  <div class="card-body">
				  	<h5 class="card-title">DETAIL OF AVAILABLE RAW MATERIAL</h5>
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col">LOW</th>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Import date</th>
						      <th scope="col">Quantity</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Total Cost</th>
						      <th scope="col">Submited by</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% allitems.reverse().forEach(function(allitems){ %>
						    <tr>
						    	<%if(allitems.itemQty <= 10){%>
							      			<th style="text-transform: uppercase; color: red;">LOW</th>
							      		<%} else {%>
							      			<th style="text-transform: uppercase;">OK</th>
							      	<%}%>
						      <th style="text-transform: uppercase;"><%=allitems.itemNo%></th>
						      <td style="text-transform: uppercase;"><%=allitems.itemName%></td>
						      <td><%= moment(allitems.importDate).format("DD-MMM-YYYY") %></td>
						      <td><%=allitems.itemQty%></td>
						      <td>₹ <%=allitems.costPerItem%>/-</td>
						      <td>₹ <%=allitems.totalCost%>/-</td>
						      <td><%=allitems.user%></td>
						    </tr>
						    <%});%>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12">
				<div class="card mt-3">
				  <div class="card-body">
				  	<h5 class="card-title">DETAIL OF IMPORT OF RAW MATERIAL</h5>
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Import date</th>
						      <th scope="col">Quantity</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Total Cost</th>
						      <th scope="col">Vendor</th>
						      <th scope="col">Vendor address</th>
						      <th scope="col">Submited by</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% allitems.forEach(function(allitems){ %>
						    <tr>
						      <th style="text-transform: uppercase;"><%=allitems.itemNo%></th>
						      <td style="text-transform: uppercase;"><%=allitems.itemName%></td>
						      <td><%= moment(allitems.importDate).format("DD-MMM-YYYY") %></td>
						      <td><%=allitems.itemQty%></td>
						      <td>₹ <%=allitems.costPerItem%>/-</td>
						      <td>₹ <%=allitems.totalCost%>/-</td>
						      <td><%=allitems.vendor%></td>
						      <td><%=allitems.vendorAdd%></td>
						      <td><%=allitems.user%></td>
						    </tr>
						    <%});%>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12">
				<h5 class="mt-3" style="text-align: center;">FINISHED PRODUCTS</h5>
				<div class="card mt-3">
				  <div class="card-body">
				  	<h5 class="card-title">DETAIL OF AVAILABLE FINISHED PRODUCT</h5>
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col">LOW</th>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Last updated</th>
						      <th scope="col">Available Item</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Total Cost</th>
						      <th scope="col">Description</th>
						      <th scope="col">Submited by</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% allfinished.reverse().forEach(function(allfinished){ %>
						    <tr>
						      <%if(allfinished.itemQty <= 10){%>
						      	<td style="color: red;">LOW</td>
						      <%} else {%>
						      	<td>OK</td>
						      <%}%>
						      <th style="text-transform: uppercase;"><%=allfinished.ItemNo%></th>
						      <td style="text-transform: uppercase;"><%=allfinished.ItemName%></td>
						      <td><%= moment(allfinished.LastUpdated).format("DD-MMM-YYYY") %></td>
						      <td><%=allfinished.itemQty%></td>
						      <td>₹ <%=allfinished.costPerItem%>/-</td>
						      <td>₹ <%=allfinished.totalCost%>/-</td>
						      <td><%=allfinished.itemDisp%></td>
						      <td><%=allfinished.user%></td>
						    </tr>
						    <%});%>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>
		</div>
	</div>
<% include ../partials/footer %>