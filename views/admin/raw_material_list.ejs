<% include ../partials/header %>
	<div class="container top-margin">
		<div class="raw">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<div class="card">
				  <div class="card-body">
				    <h4  style="text-align: center;"><i style="color: red;" class="far fa-file-alt"></i> &nbsp LIST OF RAW MATERIAL</h4>
				  </div>
				</div>
				<div class="card mt-3">
				  <div class="card-body">
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Created</th>
						      <th scope="col">Desc</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Submited by</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% raw.reverse().forEach(function(raws){ %>
						    <tr>
						      <th style="text-transform: uppercase;"><%=raws.itemNo%></th>
						      <td style="text-transform: uppercase;"><%=raws.itemName%></td>
						      <td><%= moment(raws.updatedOn).format("DD-MMM-YYYY") %></td>
						      <td><%=raws.desc%></td>
						      <td>â‚¹ <%=raws.costPerItem%>/-</td>
						      <td><%=raws.user%></td>
						    </tr>
						    <%});%>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>

			<!--add of rawaterial-->

			<div class="col-lg-12 col-md-12 col-sm-12 mt-5">
				<div class="card mt-3">
				  <div class="card-body">
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col"><i style="color: red;" class="far fa-plus-square"></i></th>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Desc</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Submit</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<form action="/admin/admin-pannel/raw-Material-List" method="POST">
							    <tr>
							      <th></th>
							      <th>
							      	<input class="form-control form-control-sm" type="text" name="itemNo" placeholder="ITEM NO">
							      </th>
							      <td>
							      	<input class="form-control form-control-sm" type="text" name="itemName" placeholder="ITEM NAME">
							      </td>
							      <td>
							      	<input class="form-control form-control-sm" type="text" name="desc" placeholder="DESC">
							      </td>
							      <td>
							      	<input class="form-control form-control-sm" type="text" name="costPerItem" placeholder="COST PER ITEM">
							      </td>
							      <td>
							      	<button type="submit" class="btn btn-primary btn-sm">OK</button>
							      </td>
							    </tr>
							</form>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>
		</div>
	</div>
<% include ../partials/footer %>