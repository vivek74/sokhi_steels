<% include ./partials/header %>
	<div class="container-fluid top-margin">
		<div class="row">
			<div class="col-lg-12 col-md-12">
				<div class="card mt-3">
				  <div class="card-body">
				  	<h5 class="card-title">Finished Product</h5>
				  	<div class="table-responsive">
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col">LOW</th>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Last updated</th>
						      <th scope="col">Available Item</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Total Cost</th>
						      <th scope="col">Description</th>
						      <th scope="col">Add QTY</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% allitems.reverse().forEach(function(allitems){ %>
						    <tr>
						      <%if(allitems.itemQty <= 10){%>
						      	<td style="color: red;">LOW</td>
						      <%} else {%>
						      	<td>OK</td>
						      <%}%>
						      <th style="text-transform: uppercase;"><%=allitems.ItemNo%></th>
						      <td style="text-transform: uppercase;"><%=allitems.ItemName%></td>
						      <td><%= moment(allitems.LastUpdated).format("DD-MMM-YYYY") %></td>
						      <td><%=allitems.itemQty%></td>
						      <td>₹ <%=allitems.costPerItem%>/-</td>
						      <td>₹ <%=allitems.totalCost%>/-</td>
						      <td><%=allitems.itemDisp%></td>
						      <td>
						      	<form action="/work-page/update-qty/<%=allitems.id%>?_method=PUT" method="POST">
							      		<div class="row">
							      			<div class="col-lg-6 col-md-6 col-sm-6">
							      				<input name="newQty" class="form-control form-control-sm" type="text" placeholder="<%=allitems.itemQty%>">
							      			</div>
							      			<div class="col-lg-6 col-md-6 col-sm-6">
							      				<button type="submit" class="btn btn-sm btn-primary">OK</button>
							      			</div>
							      		</div>
							      	</form>
							    </td>
						    </tr>
						    <%});%>
						  </tbody>
						</table>
					</div>
				  </div>
				</div>
			</div>
		</div>

		<!--update-->
		<div class="container-fluid mt-5">
			<div class="card">
				<div class="card-body">
					<div class="table-responsive">
						<h5 class="card-title">Finished Product</h5>
					    <table style="font-size: 12px;" class="table table-striped table-dark">
						  <thead>
						    <tr>
						      <th scope="col">Item No</th>
						      <th scope="col">Item Name</th>
						      <th scope="col">Qty</th>
						      <th scope="col">Cost Per Item</th>
						      <th scope="col">Despription</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<form action="/work-page/finished-product" method="POST">
							    <tr>
							      <th scope="row"><input name="itemNo" type="text" class="form-control" placeholder="Enter item No"></th>
							      <td><input name="itemName" type="text" class="form-control" placeholder="Enter item name"></td>
							      <td><input name="itemQty" type="text" class="form-control" placeholder="Available item"></td>
							      <td><input name="costPerItem" type="text" class="form-control" placeholder="Cost per item"></td>
							      <td><input name="Despription" type="text" class="form-control" placeholder="Despription"></td>
							      <td><button type="submit" class="btn btn-primary">Submit</button></td>
							    </tr>

							</form>
						  </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
<% include ./partials/footer %>